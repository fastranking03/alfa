<!DOCTYPE html>
<html lang="en">
  <head>
    <base href="http://localhost:8081" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Alfa Admin | Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <%- include('includes/head') %>
  </head>

  <body>
    <div class="main-admin-warpper">
      <%- include('includes/header') %>
      <div class="alfa-admin-wrapper">
        <div class="admin-side-nav">
          <%- include('includes/sidebar') %>
          <div class="admin-main-layout">
            <div class="admin-bradcrumb">
              <div class="admin-brudcrumb-title">
                <h3>User Detailed View</h3>
              </div>
            </div>

            <!-- User Data Table -->
            <div class="user-data">
              <h4>User Data</h4>
              <table class="table table-striped table-bordered">
                <thead class="table-dark">
                  <tr>
                    <th>User ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>status</th>
                    <!-- Add more columns as needed -->
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><%= userData.id %></td>
                    <td><%= userData.name %></td>
                    <td><%= userData.email %></td>
                    <td><%= userData.status %></td>
                    <!-- Add more columns as needed -->
                  </tr>
                </tbody>
              </table>
            </div>

            <!-- User Wishlist Table -->
            <div class="user-wishlist">
              <h4>User Wishlist</h4>
              <table class="table table-striped table-bordered">
                <thead class="table-dark">
                  <tr>
                    <th>Product ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Discount</th>
                    <th>Category</th>
                    <th>Subcategory</th>
                    <th>Created At</th>
                    <!-- Add more columns as needed -->
                  </tr>
                </thead>
                <tbody>
                  <% userFavourites.forEach(item => { %>
                  <tr>
                    <td><%= item.product_id %></td> 
                    <td><%= item.product_name %></td>
                    <td><%= item.product_price %></td>
                    <td><%= item.discount_on_product %></td>
                    <td><%= item.category_name %></td> <!-- Display category name -->
                    <td><%= item.sub_category_name	%></td> <!-- Display subcategory name -->
                    <td><%= item.created_at.toLocaleString()  %></td>
                    
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>

            <!-- User Cart Data Table -->
            <div class="user-cart-data">
              <h4>User Cart Data</h4>
              <table class="table table-striped table-bordered">
                <thead class="table-dark">
                  <tr>
                    <th>Product ID</th> 
                    <th>Name</th>
                    <th>Price</th>
                    <th>Discount</th>
                    <th>Category</th>
                    <th>Subcategory</th>
                    <th>Created At</th>
                    <!-- Add more columns as needed -->
                  </tr>
                </thead>
                <tbody>
                  <% cartData.forEach(item => { %>
                  <tr>
                    <td><%= item.product_id %></td> 
                    <td><%= item.product_name %></td>
                    <td><%= item.product_price %></td>
                    <td><%= item.discount_on_product %></td>
                    <td><%= item.category_name %></td> <!-- Display category name -->
                    <td><%= item.sub_category_name	 %></td> <!-- Display subcategory name -->
                    <td><%= item.created_at.toLocaleString()  %></td>
                    
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
