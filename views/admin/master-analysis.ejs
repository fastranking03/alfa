<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alfa Admin | Master Analysis</title>
    <%- include('includes/head') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <div class="main-admin-wrapper">
        <%- include('includes/header') %>
            <div class="alfa-admin-wrapper">
                <div class="admin-side-nav">
                    <%- include('includes/sidebar') %>
                        <div class="admin-main-layout">
                            <div class="admin-breadcrumb">
                                <div class="admin-breadcrumb-title">
                                    <h4>Master Analysis</h4>
                                </div>
                            </div>
                            <div class="admin-card">
                                <div class="row">
                                    <div class="col-md-4 my-3 bg-dark text-white">
                                        <div class="dashboard-card p-3 mx-auto text-center my-auto ">
                                            <div class="dash-top">
                                                <h6>Total Orders</h6>
                                            </div>
                                            <div class="dash-box-content">
                                                <h4><%= totalOrders %></h4>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4 my-3 bg-dark text-white">
                                        <div class="dashboard-card p-3 mx-auto text-center my-auto ">
                                            <div class="dash-top">
                                                <h6>Total Ordered Amount</h6>
                                            </div>
                                            <div class="dash-box-content">
                                                <h4>£<%= totalOrderedAmount %></h4>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4 my-3 bg-dark text-white">
                                        <div class="dashboard-card p-3 mx-auto text-center my-auto ">
                                            <div class="dash-top">
                                                <h6>Total Vat Amount</h6>
                                            </div>
                                            <div class="dash-box-content">
                                                <h4>£<%= vatamount %></h4>
                                            </div>
                                        </div>
                                    </div>
                                  
                                    <div class="col-md-4 my-3 bg-dark text-white">
                                        <div class="dashboard-card p-3 mx-auto text-center my-auto ">
                                            <div class="dash-top">
                                                <h6>Total Repeated Customers</h6>
                                            </div>
                                            <div class="dash-box-content">
                                                <h4><%= totalRepeatedCustomers %></h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="dashboard-card">
                                            <div class="dash-top">
                                                <h6>New Users Day-wise (Last 7 Days)</h6>
                                            </div>
                                            <div class="dash-box-content">
                                                <div id="newUsersDayWiseChart"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                     <div class="col-md-4 my-3 bg-dark text-white">
                                         <div class="dashboard-card p-3 mx-auto text-center my-auto ">
                                            <div class="dash-top">
                                                <h6>New Users This Month</h6>
                                            </div>
                                            <div class="dash-box-content">
                                                <h4><%= newUsersThisMonth %></h4>
                                            </div>
                                        </div>
                                    </div>
                                     <div class="col-md-4 my-3 bg-dark text-white">
                                         <div class="dashboard-card p-3 mx-auto text-center my-auto ">
                                            <div class="dash-top">
                                                <h6>New Users This Week</h6>
                                            </div>
                                            <div class="dash-box-content">
                                                <h4><%= newUsersThisWeek %></h4>
                                            </div>
                                        </div>
                                    </div>
                                     <div class="col-md-4 my-3 bg-dark text-white">
                                         <div class="dashboard-card p-3 mx-auto text-center my-auto ">
                                            <div class="dash-top">
                                                <h6>New Users Today</h6>
                                            </div>
                                            <div class="dash-box-content">
                                                <h4><%= newUsersToday %></h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
    </div>
    <%- include('includes/foot') %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const newUsersDayWise = <%= JSON.stringify(newUsersDayWise) %>;

            const labels = newUsersDayWise.map(data => data.date);
            const data = newUsersDayWise.map(data => data.count);

            const ctx = document.getElementById('newUsersDayWiseChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'New Users',
                        data: data,
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
</body>

</html>
