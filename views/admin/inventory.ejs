<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Alfa Admin | Dashboard</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Your custom styles and scripts can be included here -->

    <base href="http://localhost:8081" target="" />

    <%- include('includes/head') %>
  </head>

  <body>
    <div class="main-admin-warpper">
      <%- include('includes/header') %>
      <div class="alfa-admin-wrapper">
        <div class="admin-side-nav">
          <%- include('includes/sidebar') %> <% // for Top wear %> <% if
          (inventory_type === "bottomwear") { %>
          <div class="admin-main-layout">
            <div class="admin-bradcrumb">
              <div class="admin-brudcrumb-title">
                <h3>Bottom Wear Inventory</h3>
              </div>
            </div>
            <div class="inventory-list table-responsive">
              <% if (inventory && inventory.length > 0) { %>
              <table class="table">
                <thead>
                  <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Size 28</th>
                    <th>Size 30</th>
                    <th>Size 32</th>
                    <th>Size 34</th>
                    <th>Size 36</th>
                    <th>Size 38</th>
                    <th>Size 40</th>
                    <th>Size 42</th>
                    <th>Size 44</th>
                    <th>Size 46</th>
                    <th>Created At</th>
                    <th>Update</th>
                  </tr>
                </thead>
                <tbody>
                  <% inventory.forEach(item => { %>
                  <tr>
                    <td><%= item.productid %></td>
                    <td><%= item.productname %></td>
                    <td><%= item.size_28 || 'N/A' %></td>
                    <td><%= item.size_30 || 'N/A' %></td>
                    <td><%= item.size_32 || 'N/A' %></td>
                    <td><%= item.size_34 || 'N/A' %></td>
                    <td><%= item.size_36 || 'N/A' %></td>
                    <td><%= item.size_38 || 'N/A' %></td>
                    <td><%= item.size_40 || 'N/A' %></td>
                    <td><%= item.size_42 || 'N/A' %></td>
                    <td><%= item.size_44 || 'N/A' %></td>
                    <td><%= item.size_46 || 'N/A' %></td>
                    <td>
                      <%= item.created_at ? item.created_at.toLocaleString() :
                      'N/A' %>
                    </td>
                    <td>
                      <a
                        href="admin/inventory/update/<%= item.productid%>?type=bottom"
                        >Update</a
                      >
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
              <% } else { %>
              <p>No inventory available.</p>
              <% } %>
            </div>
          </div>
          <% } %> <% // for Top wear %> <% if (inventory_type === "topwear") {
          %>
          <div class="admin-main-layout">
            <div class="admin-bradcrumb">
              <div class="admin-brudcrumb-title">
                <h3>Top Wear Inventory</h3>
              </div>
            </div>
            <div class="inventory-list table-responsive">
              <% if (inventory && inventory.length > 0) { %>
              <table class="table">
                <thead>
                  <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>XS</th>
                    <th>S</th>
                    <th>M</th>
                    <th>L</th>
                    <th>XL</th>
                    <th>XXL</th>
                    <th>XXXL</th>
                    <th>Created At</th>
                    <th>Update</th>
                  </tr>
                </thead>
                <tbody>
                  <% inventory.forEach(item => { %>
                  <tr>
                    <td><%= item.productid %></td>
                    <td><%= item.productname %></td>
                    <td><%= item.xs || 'N/A' %></td>
                    <td><%= item.m || 'N/A' %></td>
                    <td><%= item.l || 'N/A' %></td>
                    <td><%= item.xl || 'N/A' %></td>
                    <td><%= item.xxl || 'N/A' %></td>
                    <td><%= item.xxxl || 'N/A' %></td>
                    <td><%= item.xxxxl || 'N/A' %></td>
                    <td>
                      <%= item.created_at ? item.created_at.toLocaleString() :
                      'N/A' %>
                    </td>

                    <td>
                      <a
                        href="admin/inventory/update/<%= item.productid%>?type=top"
                        >Update</a
                      >
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
              <% } else { %>
              <p>No inventory available.</p>
              <% } %>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
