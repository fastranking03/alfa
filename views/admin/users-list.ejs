<!DOCTYPE html>
<html lang="en">

<head>
  <base href="http://localhost:8081" />
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Alfa Admin | Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
  <%- include('includes/head') %>
</head>

<body>
  <div class="main-admin-warpper">
    <%- include('includes/header') %>
      <div class="alfa-admin-wrapper">
        <div class="admin-side-nav">
          <%- include('includes/sidebar') %>
            <div class="admin-main-layout">
              <div class="admin-bradcrumb">
                <div class="admin-brudcrumb-title">
                  <h3><span><i class="fa-solid fa-angle-left"></i></span> User List</h3>
                </div>
              </div>
              <div class="product-list">
                <div class="table-list-head">
                  <div class="alfa-data-search">
                    <div class="search-wrapper position-relative">
                      <span><i class="fa-solid fa-magnifying-glass"></i></span>
                      <input type="search" name="search" class="table-search" placeholder="Search" id="search">
                    </div>
                    <div class="select-warpper">
                      <div class="table-selects">
                        <select name="" id="" class="table-select">
                          <option value="all">All</option>
                          <option value="">One</option>
                        </select>
                      </div>
                    </div>
                  </div>
                  <div class="table-list-btn">
                    <div class="table-btn">
                      <a href="/admin/add-banner">Add Banner</a>
                    </div>
                  </div>
                </div>
                <div class="table-responsive">
                  <table class="alfa-table">
                    <thead>
                      <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>status</th>
                        <th>Created At</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% users.forEach(user=> { %>
                        <tr>
                          <td>
                            <%= user.id %>
                          </td>
                          <td>
                            <%= user.name %>
                          </td>
                          <td>
                            <%= user.email %>
                          </td>
                          <td>
                            <%= user.status %>
                          </td>
                          <td>
                            <%= user.created_at.toLocaleString() %>
                          </td>
                          <td>
                             <a href="admin/user-detailed-view/<%= user.id %>" class="btn-item btn-edit"><span><i class="fa-solid fa-pen-to-square"></i></span></a>
                          </td>
                        </tr>
                        <% }); %>
                    </tbody>
                  </table>
                </div>
                <div class="table-pagination-wrapper">
                  <div class="table-pagination">
                    <a href="#"><span><i class="fa-solid fa-angle-left"></i></span></a>
                    <a href="#" class="active page-items">1</a>
                    <a href="#" class="page-items">2</a>
                    <a href="#" style="color: #005D67;"><span><i class="fa-solid fa-angle-right"></i></span></a> 
                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>