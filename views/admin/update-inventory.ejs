<html lang="en">

<head>
  <base href="https://alfa-menswear.com/" />
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Alfa Admin | Edit Product</title>
  <%- include('includes/head') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
  <div class="main-admin-wrapper">
    <%- include('includes/header') %>
      <div class="alfa-admin-wrapper">
        <div class="admin-side-nav">
          <%- include('includes/sidebar') %>
            <div class="admin-main-layout">
              <div class="admin-breadcrumb">
                <!-- Render inventoryItem as a JSON string -->
                <!-- JSON.stringify(inventoryItem)   -->
                <% JSON.stringify(inventoryItem) %>
                  <% const item=inventoryItem ? inventoryItem[0] : {}; %>
                    <% const product=productDetails ? productDetails[0] : {}; %>

                      <div class="admin-breadcrumb-title">
                        <h4>Edit Product</h4>
                        <br />
                        <h5>Product Id : <%= productId %>
                        </h5>
                        <h5>product Name :<%=product.product_name%>
                        </h5>
                      </div>
              </div>

              <div class="admin-card">
                <!-- Edit Product Form bottom wear -->

                <% if (type==='bottom' ) { %>
                  <form action="/admin/update-inventory" method="POST" class="row g-3">
                    <input type="hidden" name="type" value="bottom" />

                    <input type="hidden" name="productId" value="<%= productId %>" />

                    <input type="hidden" name="product_name" value="<%=product.product_name%>">
                    <!-- Include input fields for each size -->
                    <div class="col-md-2">
                      <label for="size_28" class="form-label">Size 28:</label>
                      <input type="text" class="form-control" id="size_28" name="size_28"
                        value="<%= item && item.size_28 !== undefined ? item.size_28 : '' %>" />
                    </div>

                    <!-- Size 30 -->
                    <div class="col-md-2">
                      <label for="size_30" class="form-label">Size 30:</label>
                      <input type="text" class="form-control" id="size_30" name="size_30"
                        value="<%= item && item.size_30 !== undefined ? item.size_30 : '' %>" />
                    </div>

                    <!-- Size 32 -->
                    <div class="col-md-2">
                      <label for="size_32" class="form-label">Size 32:</label>
                      <input type="text" class="form-control" id="size_32" name="size_32"
                        value="<%= item && item.size_32 !== undefined ? item.size_32 : '' %>" />
                    </div>

                    <!-- Size 34 -->
                    <div class="col-md-2">
                      <label for="size_34" class="form-label">Size 34:</label>
                      <input type="text" class="form-control" id="size_34" name="size_34"
                        value="<%= item && item.size_34 !== undefined ? item.size_34 : '' %>" />
                    </div>

                    <!-- Size 36 -->
                    <div class="col-md-2">
                      <label for="size_36" class="form-label">Size 36:</label>
                      <input type="text" class="form-control" id="size_36" name="size_36"
                        value="<%= item && item.size_36 !== undefined ? item.size_36 : '' %>" />
                    </div>

                    <!-- Repeat for sizes 38 to 46 -->
                    <!-- Size 38 -->
                    <div class="col-md-2">
                      <label for="size_38" class="form-label">Size 38:</label>
                      <input type="text" class="form-control" id="size_38" name="size_38"
                        value="<%= item && item.size_38 !== undefined ? item.size_38 : '' %>" />
                    </div>

                    <!-- Size 40 -->
                    <div class="col-md-2">
                      <label for="size_40" class="form-label">Size 40:</label>
                      <input type="text" class="form-control" id="size_40" name="size_40"
                        value="<%= item && item.size_40 !== undefined ? item.size_40 : '' %>" />
                    </div>

                    <!-- Size 42 -->
                    <div class="col-md-2">
                      <label for="size_42" class="form-label">Size 42:</label>
                      <input type="text" class="form-control" id="size_42" name="size_42"
                        value="<%= item && item.size_42 !== undefined ? item.size_42 : '' %>" />
                    </div>

                    <!-- Size 44 -->
                    <div class="col-md-2">
                      <label for="size_44" class="form-label">Size 44:</label>
                      <input type="text" class="form-control" id="size_44" name="size_44"
                        value="<%= item && item.size_44 !== undefined ? item.size_44 : '' %>" />
                    </div>

                    <!-- Size 46 -->
                    <div class="col-md-2">
                      <label for="size_46" class="form-label">Size 46:</label>
                      <input type="text" class="form-control" id="size_46" name="size_46"
                        value="<%= item && item.size_46 !== undefined ? item.size_46 : '' %>" />
                    </div>

                    <!-- Repeat for other sizes if needed -->

                    <div class="col-12">
                      <button type="submit" class="btn" style="color: aliceblue; background-color: rgb(15, 13, 13)">
                        Update Inventory
                      </button>
                    </div>
                  </form>
                  <% } else if (type==='top' ) { %>
                    <form action="/admin/update-inventory" method="POST" class="row g-3">
                      <!-- Hidden fields for product ID and type -->
                      <input type="hidden" name="type" value="top" />
                      <input type="hidden" name="productId" value="<%= productId %>" />

                      <input type="hidden" name="product_name" value="<%=product.product_name%>">

                      <!-- Size fields -->
                      <!-- Size XS -->
                      <div class="col-md-2">
                        <label for="size_xs" class="form-label">Size XS:</label>
                        <input type="text" class="form-control" id="size_xs" name="size_xs"
                          value="<%= item && item.xs !== undefined ? item.xs : '' %>" />
                      </div>

                      <!-- Size S -->
                      <div class="col-md-2">
                        <label for="size_s" class="form-label">Size S:</label>
                        <input type="text" class="form-control" id="size_s" name="size_s"
                          value="<%= item && item.s !== undefined ? item.s : '' %>" />
                      </div>

                      <!-- Size M -->
                      <div class="col-md-2">
                        <label for="size_m" class="form-label">Size M:</label>
                        <input type="text" class="form-control" id="size_m" name="size_m"
                          value="<%= item && item.m !== undefined ? item.m : '' %>" />
                      </div>

                      <!-- Size L -->
                      <div class="col-md-2">
                        <label for="size_l" class="form-label">Size L:</label>
                        <input type="text" class="form-control" id="size_l" name="size_l"
                          value="<%= item && item.l !== undefined ? item.l : '' %>" />
                      </div>

                      <!-- Size XL -->
                      <div class="col-md-2">
                        <label for="size_xl" class="form-label">Size XL:</label>
                        <input type="text" class="form-control" id="size_xl" name="size_xl"
                          value="<%= item && item.xl !== undefined ? item.xl : '' %>" />
                      </div>

                      <!-- Size XXL -->
                      <div class="col-md-2">
                        <label for="size_xxl" class="form-label">Size XXL:</label>
                        <input type="text" class="form-control" id="size_xxl" name="size_xxl"
                          value="<%= item && item.xxl !== undefined ? item.xxl : '' %>" />
                      </div>

                      <!-- Size XXXL -->
                      <div class="col-md-2">
                        <label for="size_xxxl" class="form-label">Size XXXL:</label>
                        <input type="text" class="form-control" id="size_xxxl" name="size_xxxl"
                          value="<%= item && item.xxxl !== undefined ? item.xxxl : '' %>" />
                      </div>

                      <!-- Size XXXXL -->
                      <div class="col-md-2">
                        <label for="size_xxxxl" class="form-label">Size XXXXL:</label>
                        <input type="text" class="form-control" id="size_xxxxl" name="size_xxxxl"
                          value="<%= item && item.xxxxl !== undefined ? item.xxxxl : '' %>" />
                      </div>

                      <div class="col-12">
                        <button type="submit" class="btn" style="color: aliceblue; background-color: rgb(15, 13, 13)">
                          Update Inventory
                        </button>
                      </div>
                    </form>
                    <% } else if (type==='shoes' ) { %>
                      <form action="/admin/update-inventory" method="POST" class="row g-3">
                        <!-- Hidden fields for product ID and type -->
                        <input type="hidden" name="type" value="shoes" />
                        <input type="hidden" name="productId" value="<%= productId %>" />

                        <input type="hidden" name="product_name" value="<%=product.product_name%>">

                        <!-- Size fields -->
                        <!-- Size XS -->
                        <div class="col-md-2">
                          <label for="size_xs" class="form-label">Size 6:</label>
                          <input type="text" class="form-control" id="size_6" name="size_6"
                            value="<%= item && item.size_6 !== undefined ? item.size_6 : '' %>" />
                        </div>

                        <!-- Size S -->
                        <div class="col-md-2">
                          <label for="size_s" class="form-label">Size 7:</label>
                          <input type="text" class="form-control" id="size_7" name="size_7"
                            value="<%= item && item.size_7 !== undefined ? item.size_7 : '' %>" />
                        </div>

                        <!-- Size M -->
                        <div class="col-md-2">
                          <label for="size_m" class="form-label">Size 8:</label>
                          <input type="text" class="form-control" id="size_8" name="size_8"
                            value="<%= item && item.size_8 !== undefined ? item.size_8 : '' %>" />
                        </div>

                        <!-- Size L -->
                        <div class="col-md-2">
                          <label for="size_l" class="form-label">Size 9:</label>
                          <input type="text" class="form-control" id="size_9" name="size_9"
                            value="<%= item && item.size_9 !== undefined ? item.size_9 : '' %>" />
                        </div>

                        <!-- Size XL -->
                        <div class="col-md-2">
                          <label for="size_xl" class="form-label">Size 10:</label>
                          <input type="text" class="form-control" id="size_10" name="size_10"
                            value="<%= item && item.size_10 !== undefined ? item.size_10 : '' %>" />
                        </div>

                        <!-- Size XXL -->
                        <div class="col-md-2">
                          <label for="size_xxl" class="form-label">Size 11:</label>
                          <input type="text" class="form-control" id="size_11" name="size_11"
                            value="<%= item && item.size_11 !== undefined ? item.size_11 : '' %>" />
                        </div>

                        <!-- Size XXXL -->
                        <div class="col-md-2">
                          <label for="size_xxxl" class="form-label">Size 12:</label>
                          <input type="text" class="form-control" id="size_12" name="size_12"
                            value="<%= item && item.size_12 !== undefined ? item.size_12 : '' %>" />
                        </div>

                        <!-- Size XXXXL -->
                        <div class="col-md-2">
                          <label for="size_xxxxl" class="form-label">Size 13:</label>
                          <input type="text" class="form-control" id="size_13" name="size_13"
                            value="<%= item && item.size_13 !== undefined ? item.size_13 : '' %>" />
                        </div>

                        <div class="col-12">
                          <button type="submit" class="btn" style="color: aliceblue; background-color: rgb(15, 13, 13)">
                            Update Inventory
                          </button>
                        </div>
                      </form>
                      <% } else if (type==='belt' ) { %>
                        <form action="/admin/update-inventory" method="POST" class="row g-3">
                          <!-- Hidden fields for product ID and type -->
                          <input type="hidden" name="type" value="belt" />
                          <input type="hidden" name="productId" value="<%= productId %>" />

                          <input type="hidden" name="product_name" value="<%=product.product_name%>">


                          <!-- Size XS -->
                          <div class="col-md-2">
                            <label for="size_xs" class="form-label">S :</label>
                            <input type="text" class="form-control" id="s" name="belt_size_s"
                              value="<%= item && item.s !== undefined ? item.s : '' %>" />
                          </div>

                          <!-- Size S -->
                          <div class="col-md-2">
                            <label for="size_s" class="form-label">M :</label>
                            <input type="text" class="form-control" id="m" name="belt_size_m"
                              value="<%= item && item.m !== undefined ? item.m : '' %>" />
                          </div>

                          <!-- Size M -->
                          <div class="col-md-2">
                            <label for="size_m" class="form-label">L :</label>
                            <input type="text" class="form-control" id="l" name="belt_size_l"
                              value="<%= item && item.l !== undefined ? item.l : '' %>" />
                          </div>

                          <!-- Size L -->
                          <div class="col-md-2">
                            <label for="size_l" class="form-label">XL :</label>
                            <input type="text" class="form-control" id="xl" name="belt_size_xl"
                              value="<%= item && item.xl !== undefined ? item.xl : '' %>" />
                          </div>

                          <!-- Size 2XL -->
                          <div class="col-md-2">
                            <label for="size_2xl" class="form-label">2 XL :</label>
                            <input type="text" class="form-control" id="2xl" name="belt_size_2xl"
                              value="<%= item && item['2xl'] !== undefined ? item['2xl'] : '' %>" />
                          </div>

                          <!-- Size 3XL -->
                          <div class="col-md-2">
                            <label for="size_3xl" class="form-label">3 XL :</label>
                            <input type="text" class="form-control" id="3xl" name="belt_size_3xl"
                              value="<%= item && item['3xl'] !== undefined ? item['3xl'] : '' %>" />
                          </div>




                          <div class="col-12">
                            <button type="submit" class="btn"
                              style="color: aliceblue; background-color: rgb(15, 13, 13)">
                              Update Inventory
                            </button>
                          </div>
                        </form>
                        <% } else { %>
                          <h3>No inventory item found</h3>
                          <% } %>
              </div>
            </div>
        </div>
      </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>