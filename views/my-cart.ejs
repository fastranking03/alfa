<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Alfa Meanswear | My Cart</title>
    <%- include('includes/head') %>
  </head>

  <body>
    <div class="alfa-main-wraper">
      <%- include('includes/header') %>
      <div class="mt-100 mt-150">
        <div class="checkout-wrapper margin-160">
          <div class="container">
            <div class="checkout-title">
              <h3>My Cart</h3>
            </div>
            <div class="container mt-3">
              <div class="row">
                <div class="col-md-6">
                  <div class="alfa-cart-items cart-right-wrap">
                    <% cartItems.forEach(item => { %>
                    <div class="cart-items">
                      <div class="cart-items-left">
                        <div class="cart-image">
                          <img
                            src="../product_images/<%=item.product_main_image %> "
                            class="cart-img"
                            alt=""
                          />
                        </div>
                        <div class="pro-cart-contents">
                          <div class="pro-cart-title">
                            <h3><%= item.product_name %></h3>
                          </div>
                          <div class="pro-cart-colorsize">
                            <p>Size : <%= item.selected_size %></p>
                            <p>Color : Blue (static)</p>
                          </div>
                          <div class="pro-cart-price">
                            <h3>£<%= item.product_price %></h3>
                          </div>
                        </div>
                      </div>
                      <div class="cart-items-right">
                        <div>
                          <div class="cart-delete">
                            <a href=""
                              ><img src="assets/images/delete.png" alt=""
                            /></a>
                          </div>
                          <div class="cart-quantity-wrapper">
                            <div class="left-input">
                              <span
                                ><img src="assets/images/minuse.png" alt=""
                              /></span>
                            </div>
                            <div class="cart-quantity">
                              <input
                                type="text"
                                value="<%= item.quantity %>"
                                class="cart-value"
                              />
                            </div>
                            <div class="right-input">
                              <span
                                ><img src="assets/images/plus.png" alt=""
                              /></span>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>

                    <% }); %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="alfa-offcanvas-footer cart-left-wrap">
                    <div class="checkout-title">
                      <h4>Order Summery</h4>
                    </div>
                    <div class="promo-code-wrap">
                      <input
                        type="text"
                        class="promo-input"
                        placeholder="Promo Code"
                      />
                      <button type="submit" class="apply-btn" name="submit">
                        Apply
                      </button>
                    </div>

                    <%
                     let totalPrice = 0;
                    
                    cartItems.forEach(item => {

                    totalPrice += (parseFloat(item.product_price) ) });

                    const GST = totalPrice * 0.2; // 20% GST 
                     
                    // Assuming a discount of £30

                    const deliveryFee = 25;   
                    const totalCost = totalPrice + GST  + deliveryFee;  
                    %>


                    <div class="alfa-cart-total">
                      <ul>
                        <li>
                          <div class="alfa-text">Sub- Total</div>
                          <div class="alfa-price">£ <%=totalPrice  %></div>
                        </li>
                        <li>
                          <div class="alfa-text">GST</div>
                          <div class="alfa-price">£ <%=GST  %></div>
                        </li>
                        <!-- <li>
                          <div class="alfa-text">Discount</div>
                          <div class="alfa-price">-£30.00</div>
                        </li> -->

                        <li>
                          <div class="alfa-text">Delivery Fee</div>
                          <div class="alfa-price">£ <%=deliveryFee  %></div>
                        </li>
                      </ul>
                    </div>
                    <div class="alfa-cart-total">
                      <ul>
                        <li>
                          <div class="alfa-text">Total Cost</div>
                          <div class="alfa-price">£ <%=totalCost  %></div>
                        </li>
                      </ul>
                    </div>
                    <div class="alfa-checkout-wrapper">
                      <button type="button" class="checkout-btn">
                        Proceed to Checkout
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- <%= JSON.stringify(cartItems) %> -->
      <%= cartCount %>
      <!-- Footer -->
      <%- include('includes/footer') %>
      <!-- End -->
    </div>
    <%- include('includes/foot') %>
  </body>
</html>
